{
  "$schema": "https://raw.githubusercontent.com/jyfti/jyfti/master/workflow-schema.json",
  "name": "Retrieve the comments on the issues of a GitHub repository",
  "env": {
    "github": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      },
      "required": ["token"]
    }
  },
  "inputs": {
    "org": {
      "type": "string",
      "description": "The GitHub organization",
      "default": "jyfti"
    },
    "repo": {
      "type": "string",
      "description": "The GitHub repository",
      "default": "jyfti"
    }
  },
  "output": {
    "$eval": "comments"
  },
  "steps": [
    {
      "name": "Create header object",
      "assignTo": "headers",
      "expression": {
        "Authorization": "token ${env.github.token}"
      }
    },
    {
      "name": "Request issues from GitHub",
      "assignTo": "issueResponse",
      "request": {
        "url": "https://api.github.com/repos/${inputs.org}/${inputs.repo}/issues",
        "headers": {
          "$eval": "headers"
        }
      }
    },
    {
      "name": "Extract comments urls from response",
      "assignTo": "commentsUrls",
      "expression": {
        "$map": {
          "$eval": "issueResponse.body"
        },
        "each(issue)": {
          "$eval": "issue.comments_url"
        }
      }
    },
    {
      "name": "Request comments for each issue",
      "assignTo": "comments",
      "for": {
        "const": "commentsUrl",
        "in": { "$eval": "commentsUrls" },
        "do": [
          {
            "name": "Request comments for comment url ${commentsUrl}",
            "assignTo": "comments",
            "request": {
              "url": "${commentsUrl}",
              "headers": {
                "$eval": "headers"
              }
            }
          }
        ],
        "return": "comments"
      }
    }
  ]
}
