{
  "$schema": "https://raw.githubusercontent.com/jyfti/jyfti/master/workflow-schema.json",
  "name": "Get some Star Wars planets",
  "steps": [
    {
      "assignTo": "planet",
      "request": {
        "method": "GET",
        "url": "http://swapi.dev/api/planets/1/"
      }
    },
    {
      "assignTo": "resident0",
      "request": {
        "method": "GET",
        "url": "${planet.body.residents[0]}"
      }
    }
  ]
}