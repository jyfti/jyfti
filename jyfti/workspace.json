{
  "version": 1,
  "projects": {
    "engine": {
      "root": "packages/engine",
      "sourceRoot": "packages/engine/src",
      "projectType": "library",
      "schematics": {},
      "architect": {
        "lint": {
          "builder": "@nrwl/linter:lint",
          "options": {
            "linter": "eslint",
            "tsConfig": [
              "packages/engine/tsconfig.lib.json",
              "packages/engine/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**", "!packages/engine/**/*"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "packages/engine/jest.config.js",
            "tsConfig": "packages/engine/tsconfig.spec.json",
            "passWithNoTests": true
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/workspace"
  }
}
